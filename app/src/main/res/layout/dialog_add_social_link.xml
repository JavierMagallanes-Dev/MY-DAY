<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/spotify_dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header mejorado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_link"
                app:tint="@color/spotify_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/add_social_link"
                android:textColor="@color/spotify_white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/paste_link_description"
            android:textColor="@color/spotify_text_gray"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:alpha="0.9" />

        <!-- Platform Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/select_platform"
            android:textColor="@color/spotify_white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:alpha="0.7" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupPlatform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSelectFacebook"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                android:textColor="@color/spotify_white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/spotify_black"
                app:chipStrokeColor="#1877F2"
                app:chipStrokeWidth="2dp"
                app:checkedIconTint="#1877F2"
                app:chipMinHeight="40dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSelectInstagram"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram"
                android:textColor="@color/spotify_white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/spotify_black"
                app:chipStrokeColor="#E4405F"
                app:chipStrokeWidth="2dp"
                app:checkedIconTint="#E4405F"
                app:chipMinHeight="40dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSelectTikTok"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiktok"
                android:textColor="@color/spotify_white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/spotify_black"
                app:chipStrokeColor="@color/spotify_white"
                app:chipStrokeWidth="2dp"
                app:checkedIconTint="@color/spotify_white"
                app:chipMinHeight="40dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSelectTwitter"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twitter"
                android:textColor="@color/spotify_white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/spotify_black"
                app:chipStrokeColor="#1DA1F2"
                app:chipStrokeWidth="2dp"
                app:checkedIconTint="#1DA1F2"
                app:chipMinHeight="40dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSelectYouTube"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/youtube"
                android:textColor="@color/spotify_white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/spotify_black"
                app:chipStrokeColor="#FF0000"
                app:chipStrokeWidth="2dp"
                app:checkedIconTint="#FF0000"
                app:chipMinHeight="40dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- URL Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUrl"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/paste_url"
            android:textColorHint="@color/spotify_text_gray"
            app:boxStrokeColor="@color/spotify_green"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/spotify_green"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_link"
            app:startIconTint="@color/spotify_text_gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:textColor="@color/spotify_white"
                android:textSize="14sp"
                android:maxLines="3"
                android:minHeight="56dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/spotify_text_gray"
                android:textSize="15sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/spotify_green"
                android:text="@string/save"
                android:textColor="@color/spotify_black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>