<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Bot칩n de perfil superior -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/profile"
            android:src="@drawable/ic_person"
            app:tint="@color/spotify_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tarjeta de Estad칤sticas -->
        <!-- Tarjeta de Estad칤sticas MEJORADA CON VISUALES AVANZADOS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_huge"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Fondo con gradiente -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_stats_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con 칤cono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_grid"
                            app:tint="@color/spotify_green"
                            android:alpha="0.9" />

                        <TextView
                            style="@style/TextAppearance.App.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Estad칤sticas"
                            android:textSize="22sp" />

                        <!-- Badge de "Nuevo" o estado -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy"
                            android:textColor="@color/spotify_green"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_metric_highlight"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:letterSpacing="0.05" />

                    </LinearLayout>

                    <!-- Separador decorativo -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/spotify_green"
                        android:alpha="0.6" />

                    <!-- Grid de m칠tricas MEJORADO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <!-- M칄TRICA 1: Entradas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp">

                            <!-- 칈cono peque침o -->
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_book"
                                app:tint="@color/spotify_green"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/tvEntryCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="1"
                                android:textColor="@color/spotify_white"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                android:id="@+id/tvEntryLabel"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Diarios"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:alpha="0.7" />

                        </LinearLayout>

                        <!-- M칄TRICA 2: Videos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_link"
                                app:tint="@color/spotify_green"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/tvStreakDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/spotify_white"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Videos"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- M칄TRICA 3: Palabras totales - Destacada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_metric_highlight"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_quote"
                            app:tint="@color/spotify_green" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalWords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/spotify_white"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="palabras escritas"
                                android:textSize="12sp"
                                android:alpha="0.7" />

                        </LinearLayout>

                        <!-- Indicador de tendencia -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="游늳"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+100%"
                                android:textColor="@color/spotify_green"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>
        <!-- Tarjeta de Lugares -->
        <!-- Tarjeta de Lugares MEJORADA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlaces"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/spacing_medium"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardStatistics">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Fondo con gradiente simulando mapa -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_stats_gradient" />

                <!-- Grid pattern overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0A1DB954"
                    android:alpha="0.3" />

                <!-- Contenido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/spotify_green" />

                        <TextView
                            style="@style/TextAppearance.App.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Lugares"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pr칩ximamente"
                            android:textColor="@color/spotify_text_gray"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_metric_highlight"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:alpha="0.5" />

                    </LinearLayout>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/spotify_green"
                        android:alpha="0.5" />

                    <!-- Placeholder para mapa -->
                    <TextView
                        style="@style/TextAppearance.App.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Visualiza d칩nde has escrito\ntus mejores historias"
                        android:lineSpacingExtra="4dp"
                        android:alpha="0.6" />

                </LinearLayout>

                <!-- Decorative pin icon -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/spotify_green"
                    android:alpha="0.1" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>
        <!-- Secci칩n Diarios -->
        <LinearLayout
            android:id="@+id/sectionDiaries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardPlaces">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diarios"
                android:textColor="@color/spotify_text_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnAddDiary"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_button"
                android:src="@drawable/ic_add"
                app:tint="@color/spotify_text_gray" />

        </LinearLayout>

        <!-- Lista de Diarios -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDiaries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/spotify_dark_gray"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionDiaries">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider_horizontal"
                android:showDividers="middle">

                <!-- Diario -->
                <LinearLayout
                    android:id="@+id/layoutDiary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_book"
                        app:tint="@color/spotify_green" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Diario"
                        android:textColor="@color/spotify_white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvDiaryCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="1"
                        android:textColor="@color/spotify_text_gray"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/spotify_text_gray" />

                </LinearLayout>

                <!-- Social Media -->
                <LinearLayout
                    android:id="@+id/layoutSocialMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_heart"
                        app:tint="#EF4444" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Social Media"
                        android:textColor="@color/spotify_white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSocialMediaCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="0"
                        android:textColor="@color/spotify_text_gray"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/spotify_text_gray" />

                </LinearLayout>

                <!-- Eliminadas recientemente -->
                <LinearLayout
                    android:id="@+id/layoutDeleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/spotify_text_gray" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Eliminadas recientemente"
                        android:textColor="@color/spotify_white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="1"
                        android:textColor="@color/spotify_text_gray"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/spotify_text_gray" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
