<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Bot贸n de perfil superior -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/profile"
            android:src="@drawable/ic_person"
            app:tint="@color/spotify_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tarjeta de Estad铆sticas MEJORADA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_huge"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_stats_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con 铆cono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_grid"
                            app:tint="@color/spotify_green"
                            android:alpha="0.9" />

                        <TextView
                            style="@style/TextAppearance.App.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Estad铆sticas"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy"
                            android:textColor="@color/spotify_green"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_metric_highlight"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:letterSpacing="0.05" />

                    </LinearLayout>

                    <!-- Separador decorativo -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/spotify_green"
                        android:alpha="0.6" />

                    <!-- Grid de m茅tricas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <!-- MTRICA 1: Entradas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_book"
                                app:tint="@color/spotify_green"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/tvEntryCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="1"
                                android:textColor="@color/spotify_white"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                android:id="@+id/tvEntryLabel"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Diarios"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:alpha="0.7" />

                        </LinearLayout>

                        <!-- MTRICA 2: Videos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_link"
                                app:tint="@color/spotify_green"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/tvStreakDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/spotify_white"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Videos"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- MTRICA 3: Palabras totales -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_metric_highlight"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_quote"
                            app:tint="@color/spotify_green" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalWords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/spotify_white"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="palabras escritas"
                                android:textSize="12sp"
                                android:alpha="0.7" />

                        </LinearLayout>

                        <!-- Indicador de tendencia -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+100%"
                                android:textColor="@color/spotify_green"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta de Lugares MEJORADA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlaces"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/spacing_medium"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardStatistics">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_stats_gradient" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0A1DB954"
                    android:alpha="0.3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/spotify_green" />

                        <TextView
                            style="@style/TextAppearance.App.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Lugares"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pr贸ximamente"
                            android:textColor="@color/spotify_text_gray"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_metric_highlight"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:alpha="0.5" />

                    </LinearLayout>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/spotify_green"
                        android:alpha="0.5" />

                    <TextView
                        style="@style/TextAppearance.App.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Visualiza d贸nde has escrito\ntus mejores historias"
                        android:lineSpacingExtra="4dp"
                        android:alpha="0.6" />

                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/spotify_green"
                    android:alpha="0.1" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Secci贸n Diarios -->
        <LinearLayout
            android:id="@+id/sectionDiaries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardPlaces">

            <TextView
                style="@style/TextAppearance.App.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diarios"
                android:textSize="20sp"
                android:letterSpacing="0.01" />

            <ImageButton
                android:id="@+id/btnAddDiary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_button"
                android:src="@drawable/ic_add"
                app:tint="@color/spotify_green" />

        </LinearLayout>

        <!-- Lista de Diarios -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDiaries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:cardBackgroundColor="@color/spotify_dark_gray"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/spotify_light_gray"
            app:strokeWidth="0.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionDiaries">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider_horizontal"
                android:showDividers="middle">

                <!-- DIARIO -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutDiary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_large"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:paddingTop="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_medium"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:id="@+id/iconContainer1"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_metric_highlight"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_book"
                            app:tint="@color/spotify_green" />

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/textContainer1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/iconContainer1"
                        app:layout_constraintEnd_toStartOf="@id/badgeContainer1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            style="@style/TextAppearance.App.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diario"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.App.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Tus entradas personales"
                            android:textSize="12sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/badgeContainer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        app:layout_constraintEnd_toStartOf="@id/chevron1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/tvDiaryCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/spotify_white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:minWidth="28dp"
                            android:gravity="center"
                            android:background="@drawable/bg_metric_highlight"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/chevron1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/spotify_text_gray"
                        android:alpha="0.6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- SOCIAL MEDIA -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutSocialMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_large"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:paddingTop="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_medium"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:id="@+id/iconContainer2"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_metric_highlight"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_heart"
                            app:tint="#EF4444" />

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/textContainer2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/iconContainer2"
                        app:layout_constraintEnd_toStartOf="@id/badgeContainer2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            style="@style/TextAppearance.App.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social Media"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.App.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Videos guardados"
                            android:textSize="12sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/badgeContainer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        app:layout_constraintEnd_toStartOf="@id/chevron2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/tvSocialMediaCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/spotify_white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:minWidth="28dp"
                            android:gravity="center"
                            android:background="@drawable/bg_metric_highlight"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/chevron2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/spotify_text_gray"
                        android:alpha="0.6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- ELIMINADAS RECIENTEMENTE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutDeleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_large"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:paddingTop="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_medium"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:id="@+id/iconContainer3"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_metric_highlight"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_delete"
                            app:tint="@color/spotify_text_gray"
                            android:alpha="0.8" />

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/textContainer3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/iconContainer3"
                        app:layout_constraintEnd_toStartOf="@id/badgeContainer3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            style="@style/TextAppearance.App.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eliminadas recientemente"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.App.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="30 d铆as restantes"
                            android:textSize="12sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/badgeContainer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        app:layout_constraintEnd_toStartOf="@id/chevron3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/tvDeletedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/spotify_white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:minWidth="28dp"
                            android:gravity="center"
                            android:background="@drawable/bg_metric_highlight"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/chevron3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/spotify_text_gray"
                        android:alpha="0.6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>