<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/spotify_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/social_media"
            android:textColor="@color/spotify_white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Filters - Platform Badges -->
    <HorizontalScrollView
        android:id="@+id/scrollViewFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all"
                android:textColor="@color/spotify_white"
                app:chipBackgroundColor="@color/spotify_dark_gray"
                app:chipStrokeColor="@color/spotify_green"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="@color/spotify_green" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFacebook"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                android:textColor="@color/spotify_white"
                app:chipBackgroundColor="@color/spotify_dark_gray"
                app:chipStrokeColor="#1877F2"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="#1877F2" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInstagram"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram"
                android:textColor="@color/spotify_white"
                app:chipBackgroundColor="@color/spotify_dark_gray"
                app:chipStrokeColor="#E4405F"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="#E4405F" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTikTok"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiktok"
                android:textColor="@color/spotify_white"
                app:chipBackgroundColor="@color/spotify_dark_gray"
                app:chipStrokeColor="@color/spotify_white"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="@color/spotify_white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTwitter"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twitter"
                android:textColor="@color/spotify_white"
                app:chipBackgroundColor="@color/spotify_dark_gray"
                app:chipStrokeColor="#1DA1F2"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="#1DA1F2" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipYouTube"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/youtube"
                android:textColor="@color/spotify_white"
                app:chipBackgroundColor="@color/spotify_dark_gray"
                app:chipStrokeColor="#FF0000"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="#FF0000" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- RecyclerView for Links -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSocialLinks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollViewFilters" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_social_links"
            android:textColor="@color/spotify_text_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/add_social_link_hint"
            android:textColor="@color/spotify_text_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="@string/add_social_link"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/spotify_green"
        app:tint="@color/spotify_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
