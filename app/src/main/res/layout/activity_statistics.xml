<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header MEJORADO -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/spotify_white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/TextAppearance.App.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas" />

                <TextView
                    style="@style/TextAppearance.App.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu progreso detallado"
                    android:alpha="0.6" />

            </LinearLayout>

        </LinearLayout>

        <!-- Filtros de tiempo MEJORADOS -->
        <HorizontalScrollView
            android:id="@+id/scrollFilters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAllTime"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Todo"
                    android:textColor="@color/spotify_white"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/spotify_green"
                    app:chipStrokeWidth="2dp"
                    app:checkedIconTint="@color/spotify_green" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipThisMonth"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Este mes"
                    android:textColor="@color/spotify_white"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/spotify_green"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipThisWeek"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esta semana"
                    android:textColor="@color/spotify_white"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/spotify_green"
                    app:chipStrokeWidth="2dp" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Botón de calendario -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowCalendar"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Fecha personalizada"
            android:textColor="@color/spotify_white"
            android:textSize="13sp"
            app:icon="@drawable/ic_calendar"
            app:iconTint="@color/spotify_green"
            app:strokeColor="@color/spotify_light_gray"
            app:strokeWidth="1dp"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollFilters" />

        <!-- Calendario -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:background="@drawable/bg_card_stats_gradient"
            android:dateTextAppearance="@style/CalendarDateTextAppearance"
            android:weekDayTextAppearance="@style/CalendarWeekDayTextAppearance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnShowCalendar" />

        <!-- Texto de filtro activo -->
        <TextView
            android:id="@+id/tvFilterInfo"
            style="@style/TextAppearance.App.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Filtrando..."
            android:textColor="@color/spotify_green"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendarView" />

        <!-- CARD DE RESUMEN MEJORADO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFilterInfo">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_stats_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con ícono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_grid"
                            app:tint="@color/spotify_green" />

                        <TextView
                            style="@style/TextAppearance.App.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Resumen General"
                            android:textSize="19sp" />

                    </LinearLayout>

                    <!-- Separador -->
                    <View
                        android:layout_width="50dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/spotify_green"
                        android:alpha="0.6" />

                    <!-- Grid de métricas principales -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <!-- Métrica 1: Diarios -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:id="@+id/tvTotalEntries"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/spotify_white"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Diarios"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Métrica 2: Videos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:id="@+id/tvTotalVideos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/spotify_white"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Videos"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Métrica 3: Días activos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvActiveDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/spotify_white"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Días"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Segunda fila de métricas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <!-- Palabras totales -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:id="@+id/tvTotalWords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/spotify_white"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Palabras"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Promedio palabras -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_metric_highlight"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvAvgWords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/spotify_white"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.02" />

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Promedio"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Gráfico de entradas por mes MEJORADO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardSummary">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_stats_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header del gráfico -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/spotify_green"
                            android:alpha="0.8" />

                        <TextView
                            style="@style/TextAppearance.App.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Entradas por mes"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <!-- Gráfico de barras -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="28dp"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:baselineAligned="false">

                        <!-- Barras repetidas con mejor estética -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:id="@+id/barMonth1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_chart_bar" />

                            <TextView
                                android:id="@+id/tvMonth1"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Ene"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:id="@+id/barMonth2"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@drawable/bg_chart_bar" />

                            <TextView
                                android:id="@+id/tvMonth2"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Feb"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:id="@+id/barMonth3"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:background="@drawable/bg_chart_bar" />

                            <TextView
                                android:id="@+id/tvMonth3"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Mar"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:id="@+id/barMonth4"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="@drawable/bg_chart_bar" />

                            <TextView
                                android:id="@+id/tvMonth4"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Abr"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:id="@+id/barMonth5"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/bg_chart_bar" />

                            <TextView
                                android:id="@+id/tvMonth5"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="May"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:id="@+id/barMonth6"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/bg_chart_bar" />

                            <TextView
                                android:id="@+id/tvMonth6"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Jun"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Distribución por plataforma MEJORADA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlatforms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardChart">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_stats_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_link"
                            app:tint="@color/spotify_green"
                            android:alpha="0.8" />

                        <TextView
                            style="@style/TextAppearance.App.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Videos por plataforma"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <!-- Plataformas con progress bars mejorados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <!-- Facebook -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/TextAppearance.App.Body"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Facebook"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvFacebookCount"
                                    style="@style/TextAppearance.App.Body"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressFacebook"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_marginTop="8dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/bg_progress_track"
                                android:progressTint="#1877F2" />
                        </LinearLayout>

                        <!-- Instagram -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/TextAppearance.App.Body"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Instagram"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvInstagramCount"
                                    style="@style/TextAppearance.App.Body"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressInstagram"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_marginTop="8dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/bg_progress_track"
                                android:progressTint="#E4405F" />
                        </LinearLayout>

                        <!-- TikTok -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
